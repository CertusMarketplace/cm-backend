    private Boolean workIsDeleted = Boolean.FALSE;

    @Column(name = "work_image_url")
    private String workImageUrl;

    @OneToMany(mappedBy = "work", cascade = CascadeType.ALL, orphanRemoval = true, fetch = FetchType.LAZY)
